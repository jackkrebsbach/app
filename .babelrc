{
  "presets": ["module:metro-react-native-babel-preset"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["."],
        "extensions": [
          ".ios.ts",
          ".android.ts",
          ".ts",
          ".ios.tsx",
          ".android.tsx",
          ".jsx",
          ".js",
          ".json"
        ],
        "alias": {
          "@navigation/*": "./src/navigation/*",
          "@components/*": "./src/components/*",
          "@services/*": "./src/services/*",
          "@assets/*": "./src/assets/*",
          "@views/*": "./src/views/*",
          "@utils/*": "./src/utils/*"
        }
      }
    ]
  ]
}