{
  "presets": ["module:metro-react-native-babel-preset"],
  "plugins": [
    [
      "module-resolver",
      {
        "extensions": [
          ".ios.ts",
          ".android.ts",
          ".ts",
          ".ios.tsx",
          ".android.tsx",
          ".jsx",
          ".js",
          ".json"
        ],
        "alias": {
          "@": "./src",
          "@navigation": "./src/navigation",
          "@components": "./src/components",
          "@services": "./src/services",
          "@utils": "./src/utils",
          "@assets": "./src/assets",
          "@views": "./src/views"
        }
      }
    ]
  ]
}
